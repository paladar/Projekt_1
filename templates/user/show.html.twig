{% extends 'base.html.twig' %}

{% block title %}{{ 'users.user'|trans }} #{{user.id}}{% endblock %}

{% block main %}
    <div class="row">
        <h1 class="col">{{ 'users.user'|trans }} #{{user.id}}</h1>
    </div>
    <div class="row buttons">
        <div class="col">
            {{ include('user/_delete_form.html.twig') }}
        </div>
        <div class="col text-right">
            <a class="btn btn-primary" href="{{ path('user_index') }}">{{'back'|trans}}</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <tbody>
                    <tr>
                        <th>{{ 'users.username'|trans }}</th>
                        <td>{{ user.username }}</td>
                    </tr>
                    <tr>
                        <th>{{ 'users.email'|trans  }}</th>
                        <td>{{ user.email }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}