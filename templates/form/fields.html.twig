{% block form_row %}
    <div class="form-group row">
        {{ form_errors(form) }}
        {{ form_label(form,null,{'label_attr' : {'class' : 'col-md-2 form-label'} }) }}
        <div class="col-md-10">
            {{ form_widget(form, { 'attr': {'class': 'col-sm-10 form-control'} }) }}
        </div>
    </div>
{% endblock form_row %}

{% block money_widget %}
{% spaceless %}
    <input type="number" step=".01" {{ block('widget_attributes') }} value="{{value}}">
{% endspaceless %}
{% endblock money_widget %}
