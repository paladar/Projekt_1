<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Projekt{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet"/>
            <link href="{{ asset('font-awesome/css/font-awesome.min.css') }} " rel="stylesheet"/>
            <link href="{{ asset('datatables/datatables.css') }}" rel="stylesheet"/>
            <link href="{{ asset('datatables/bootstrap.datatables.css') }}" rel="stylesheet"/>
            <link href="{{ asset('css/jquery-ui.min.css') }}" rel="stylesheet"/>
            <link href="{{ asset('css/jquery-ui.structure.css') }}" rel="stylesheet"/>
            <link href="{{ asset('css/jquery-ui.theme.css') }}" rel="stylesheet"/>
            <link href="{{ asset('css/style.css') }}" rel="stylesheet"/>
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="{{path('homepage')}}">{{'system_name'|trans}}</a>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        {% if is_granted('ROLE_ADMIN')%}
                            <li class="nav-item active">
                                <a class="nav-link" href="{{path('user_index')}}">{{'users.header'|trans}}<span class="sr-only">(current)</span></a>
                            </li>
                        {% endif %}
                    </ul>
                    <a class="btn btn-primary float-right" href="{{path('fos_user_security_logout')}}">{{'logout'|trans}}</a>
                </div>
            </div>
        </nav>
        <div class="content">
            <div class="container">
                {% block main %}
                {% endblock %}
            </div>
        </div>
    {% endblock %}
    {% block javascripts %}
        <script src="{{ asset('js/jquery-3.2.1.min.js') }}"></script>
        <script src="{{ asset('js/jquery-ui.min.js') }}"></script>
        <script src="{{ asset('datatables/datatables.js') }}"></script>
        <script src="{{ asset('js/admin.js') }}"></script>
    {% endblock %}
</body>
</html>
